<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#ffffff">

    <!-- Top Bar -->

    <!-- My Posts Icon -->


    <!-- Main Profile Content Area -->
    <LinearLayout
        android:id="@+id/profile_content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#005A9C"> <!-- Blue background -->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/text_profile_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="J"
                android:textColor="#FFFFFF"
                android:textSize="80sp"
                android:textStyle="bold"
                tools:text="J" />

            <ImageButton
                android:id="@+id/btn_edit_profile_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle_edit_button_background"
                android:contentDescription="Change profile color"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_color_edit_24dp" />

            <!-- Admin Badge -->
            <TextView
                android:id="@+id/admin_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="ADMIN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:background="#FFD700"
                android:textColor="#000000"
                android:visibility="gone" />

            <!-- Like Count Display -->
            <LinearLayout
                android:id="@+id/like_count_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#80000000"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_like"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/like_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <!-- Name Field -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/text_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:hint="John Smith" />

        <!-- Pronouns Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronouns"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/text_profile_pronouns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:hint="He/Him" />

        <!-- About Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/text_profile_bio"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:hint="..." />

        <Button
            android:id="@+id/button_save_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/button_gray"
            android:text="Save Profile" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/button_gray"
            android:text="Logout" />

    </LinearLayout>

    <!-- Bottom Navigation Placeholder -->

</RelativeLayout>
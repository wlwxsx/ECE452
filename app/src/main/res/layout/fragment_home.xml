<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#ffffff">

    <!-- Top Bar -->

    <!-- My Posts Icon -->


    <ImageButton
        android:id="@+id/myPostsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:contentDescription="My Posts icon Button"
        android:src="@drawable/ic_posts_placeholder" />



    <!-- Main Profile Content Area -->
    <LinearLayout
        android:id="@+id/profile_content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#005A9C"> <!-- Blue background -->

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/image_profile_picture"
            android:layout_width="216dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:contentDescription="My Profile image"
            android:src="@drawable/ic_profile_placeholder"
            app:srcCompat="@drawable/account_box_24px" /> <!-- Placeholder drawable -->

        <!-- Name Field -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="John Smith" />

        <!-- Pronouns Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronouns"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_profile_pronouns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="He/Him" />

        <!-- About Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_profile_bio"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="..." />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout" />

    </LinearLayout>

    <!-- Bottom Navigation Placeholder -->

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_colour"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="34dp"
        android:text="N/A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_pronouns"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="N/A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Likes row: thumbs up icon and count -->
    <LinearLayout
        android:id="@+id/like_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_like"
            android:contentDescription="Like"
            android:tint="#2196F3" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/report_user_button"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FF0000"
        android:paddingHorizontal="4dp"
        android:paddingVertical="0dp"
        android:text="REPORT USER"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/profile_bio"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="33dp"
        android:text="N/A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_profile_profile"
        android:layout_width="187dp"
        android:layout_height="185dp"
        android:background="#005A9C"
        android:gravity="center"
        android:text="J"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-1dp"
        tools:text="J" />

    <!-- Admin Badge -->
    <TextView
        android:id="@+id/admin_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_profile_profile"
        app:layout_constraintStart_toStartOf="@id/text_profile_profile"
        app:layout_constraintEnd_toEndOf="@id/text_profile_profile" />

    <!-- Banned Badge -->
    <TextView
        android:id="@+id/banned_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BANNED"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/admin_badge"
        app:layout_constraintStart_toStartOf="@id/text_profile_profile"
        app:layout_constraintEnd_toEndOf="@id/text_profile_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>
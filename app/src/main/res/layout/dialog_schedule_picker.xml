<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_picker_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/edit_text_background">

    <TextView
        android:id="@+id/schedule_picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick up to 5 time slots"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/time_slots_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <!-- Time slot views will be dynamically added here -->
    </LinearLayout>

    <Button
        android:id="@+id/add_time_slot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Time Slot"
        android:backgroundTint="#005A9C"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_schedule_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#005A9C"
            android:text="Cancel"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/confirm_schedule_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:backgroundTint="#888888"
            android:textColor="@android:color/white"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>
